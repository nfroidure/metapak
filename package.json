{
  "name": "metapak",
  "version": "1.0.2",
  "description": "Node modules authoring made easy.",
  "metapak": {
    "configs": [
      "mocha",
      "eslint",
      "travis",
      "codeclimate"
    ],
    "data": {
      "testsFiles": "src/**/*.mocha.js",
      "files": "src/**/*.js"
    }
  },
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "cli": "env NODE_ENV=${NODE_ENV:-cli}",
    "cover": "istanbul cover _mocha --report html -- src/**/*.mocha.js -R spec -t 5000",
    "coveralls": "istanbul cover _mocha --report lcovonly -- src/**/*.mocha.js -R spec -t 5000 && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "cz": "env NODE_ENV=${NODE_ENV:-cli} git cz",
    "install": "node bin/metapak.js",
    "lint": "eslint src/**/*.js",
    "metapak": "node bin/metapak.js",
    "preversion": "npm t && npm run lint && npm run metapak -s",
    "test": "mocha src/**/*.mocha.js",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nfroidure/metapak.git"
  },
  "author": "Nicolas Froidure",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nfroidure/metapak/issues"
  },
  "homepage": "https://github.com/nfroidure/metapak#readme",
  "bin": {
    "metapak": "bin/metapak.js"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "commander": "^2.12.1",
    "debug": "^3.1.0",
    "glob": "^7.1.2",
    "knifecycle": "^2.4.1",
    "mkdirp": "^0.5.1",
    "sort-object": "^3.0.2",
    "yerror": "^2.1.0"
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.2.0",
    "coveralls": "2.11.15",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "3.16.0",
    "eslint-config-simplifield": "4.1.1",
    "istanbul": "0.4.5",
    "metapak-nfroidure": "1.0.1",
    "mocha": "3.2.0",
    "mocha-lcov-reporter": "1.3.0",
    "sinon": "^1.17.7"
  },
  "engines": {
    "node": ">=6.9.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "greenkeeper": {
    "ignore": [
      "commitizen",
      "cz-conventional-changelog",
      "conventional-changelog-cli",
      "mocha",
      "mocha-lcov-reporter",
      "coveralls",
      "istanbul",
      "eslint",
      "eslint-config-simplifield"
    ]
  }
}
